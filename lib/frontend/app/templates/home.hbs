<div class="container-fluid">
  <div class="row">
    <div class="col col-md-12">
      <div class="panel-body"></div>
      <div class="form-group">
        {{input type='text' value=path class='form-control' placeholder='Path' action='showListing'}}
      </div>
      <button {{action 'showListing'}} type="button" class="btn btn-primary">Fetch</button>
    </div>
  </div>

  <div class="row">
    <div class="col col-md-3">

      <div class="panel-body"></div>
      <em>{{parentDirectoryPath}}</em>
      <hr />

      <ul class="list-unstyled overflowContainer">
        {{#each directory in parentDirectory}}
        <li>{{directory-list-item directoryAction='goToDirectory' fileAction='showFileContents' name=directory.name path=directory.path type=directory.type}}</li>
        {{/each}}
      </ul>
    </div>
    <div class="col col-md-3">

      <div class="panel-body"></div>
      <em>{{path}}</em>
      <hr />

      <ul class="list-unstyled overflowContainer">
        {{#if isLoadingParentDirectory}}
        <em class="text-muted">Loading...</em>
        {{else}}
        {{directory-list-item parentAction='goToParentDirectory' type='parent'}}
        {{/if}}
        {{#each directory in model}}
        <li>{{directory-list-item directoryAction='goToDirectory' fileAction='showFileContents' name=directory.name path=directory.path type=directory.type}}</li>
        {{/each}}
      </ul>

    </div>
    <div class="col col-md-6">
      {{#if currentFileContent}}
      <pre>
        {{currentFileContent}}
      </pre>
      {{else}}
      <div class="well text-center"><em>File contents</em></div>
      {{/if}}
    </div>
  </div>
</div>
